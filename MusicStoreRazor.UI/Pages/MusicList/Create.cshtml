@page
@model MusicStoreRazor.UI.Pages.MusicList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Create New Music</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Musics.Name"> </label>

            </div>
            <div class="col-6">
                <input asp-for="Musics.Name" class="form-control" />

            </div>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Musics.Author"> </label>

            </div>
            <div class="col-6">
                <input asp-for="Musics.Author" class="form-control" />

            </div>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Musics.BarcodeNumber"> </label>

            </div>
            <div class="col-6">
                <input asp-for="Musics.BarcodeNumber" class="form-control" />

            </div>

        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit"  value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3 ">
                <a asp-page="Index" class="btn btn-success form-control">Back to List </a>

            </div>

        </div>


    </form>

</div>